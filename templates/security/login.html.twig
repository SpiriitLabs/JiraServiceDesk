{% extends 'security/layout.html.twig' %}
{% trans_default_domain 'app' %}

{% block content %}
    <div class="text-center w-75 m-auto">
        <h4 class="text-dark-50 text-center pb-0 fw-bold">{{ 'security.login.sign_in'|trans }}</h4>
        <p class="text-muted mb-4">{{ 'security.login.sign_in_catch_phrase'|trans }}</p>
    </div>

    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('security_login') }}" method="post">

        <div class="mb-3">
            <label for="username" class="form-label">{{ 'user.email.label'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
        </div>

        <div class="mb-3">
            <a href="{{ path('security_forgot_password_request') }}" tabindex="-1" class="text-muted float-end"><small>{{ 'security.reset_password_request.label'|trans }} ?</small></a>
            <label for="password" class="form-label">{{ 'user.password.label'|trans }}</label>
            <div class="input-group input-group-merge">
                <input type="password" id="password" name="_password" class="form-control">
                <div class="input-group-text" data-password="false">
                    <span class="password-eye"></span>
                </div>
            </div>
        </div>

        <div class="mb-3 mb-3">
            <div class="form-check">
                <input type="checkbox" name="_remember_me" class="form-check-input" id="checkbox-signin">
                <label class="form-check-label" for="checkbox-signin">{{ 'user.remember_me.label'|trans }}</label>
            </div>
        </div>

        <div class="mb-3 mb-0 text-center">
            <button class="btn btn-primary" type="submit">{{ 'security.login.action'|trans }}</button>
        </div>
    </form>
{% endblock %}
