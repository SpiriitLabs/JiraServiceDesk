{% trans_default_domain 'app' %}

<div class="navbar-custom gain-header">
    <div class="topbar container-fluid">
        <div class="d-flex align-items-center gap-lg-2 gap-1">
            <!-- Sidebar Menu Toggle Button -->
            <button class="button-toggle-menu d-flex flex-row justify-content-start align-items-center gain-header-menu-button">
                <i class="mdi mdi-menu"></i>
            </button>

            <!-- Horizontal Menu Toggle Button -->
            <button class="navbar-toggle" data-bs-toggle="collapse" data-bs-target="#topnav-menu-content">
                <div class="lines">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </button>
        </div>

        <div class="app-search dropdown d-none d-lg-flex flex-row align-items-center gap-3" style="width: 50%" >
            <div class="d-lg-block" style="width: 75%" {{ stimulus_controller('search', {searchUrl: absolute_url(path('app_search_api')), defaultEmtpyText: 'header.search.default'|trans}) }}>
                <form {{ stimulus_target('search', 'form') }} style="max-width: 100%;">
                    <div class="input-group">
                        <input type="search" class="ps-2 form-control dropdown-toggle" style="width: 90%" placeholder="{{ 'filter.query.label'|trans }}..." id="top-search" {{ stimulus_target('search', 'input') }} {{ stimulus_action('search', 'onSearchInput') }}>

                        <button class="text-white btn btn-primary" type="submit" {{ stimulus_action('search', 'onSearchInput') }}><span class="mdi mdi-magnify"></span></button>
                    </div>
                </form>

                <div class="dropdown-menu dropdown-menu-animated" style="width: 40%" id="search-dropdown" {{ stimulus_target('search', 'dropdown') }}>

                    <div class="dropdown-header noti-title">
                        <h5 class="text-overflow mb-2">{{ 'header.search.default'|trans }}</h5>
                    </div>

                </div>
            </div>

            {% if current_project is defined or app.user.projects|length == 1 %}
                {% set project = current_project ?? app.user.projects[0] %}
                <div>
                    <a href="{{ path('app_project_issue_create', {key: project.jiraKey}) }}" class="btn btn-success">
                        <i class="mdi mdi-plus"></i>
                        {{ 'issue.action.create'|trans }}
                    </a>
                </div>
            {% else %}
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#issueCreateSelectProject">
                    <i class="mdi mdi-plus"></i>
                    {{ 'issue.action.create'|trans }}
                </button>
            {% endif %}
        </div>

        <ul class="topbar-menu d-flex align-items-center gap-3">

            <li class="dropdown">
                <a class="nav-link dropdown-toggle arrow-none" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                    <img src="{{ asset('assets/images/locale/'~app.locale~'.jpg', 'app') }}" alt="user-image" class="me-0 me-sm-1" height="12">
                    <span class="align-middle d-none d-lg-inline-block">{{ app.locale == 'fr' ? 'locale.fr'|trans : 'locale.en'|trans }}</span> <i class="mdi mdi-chevron-down d-none d-sm-inline-block align-middle"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated" style="">

                    {% if app.locale == 'fr' %}
                        <a href="{{ path('app_locale_en') }}" class="dropdown-item">
                            <img src="{{ asset('assets/images/locale/en.jpg', 'app') }}" alt="user-image" class="me-1" height="12"> <span class="align-middle">{{ 'locale.en'|trans }}</span>
                        </a>
                    {% else %}
                        <a href="{{ path('app_locale_fr') }}" class="dropdown-item">
                            <img src="{{ asset('assets/images/locale/fr.jpg', 'app') }}" alt="user-image" class="me-1" height="12"> <span class="align-middle">{{ 'locale.fr'|trans }}</span>
                        </a>
                    {% endif %}

                </div>
            </li>

            <li class="dropdown notification-list">
                <a class="nav-link dropdown-toggle arrow-none" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="true">
                    <i class="ri-notification-3-line font-22"></i>
                    {% if user_has_new_notifications(app.user) %}
                        <span class="noti-icon-badge" id="notifications-icon-badge"></span>
                    {% endif %}
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated dropdown-lg py-0" style="position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate3d(0px, 72px, 0px);" data-popper-placement="bottom-end">
                    <div class="p-2 border-top-0 border-start-0 border-end-0 border-dashed border">
                        <div class="row align-items-center">
                            <div class="col">
                                <h6 class="m-0 font-16 fw-semibold">{{ 'notifications.label'|trans }}</h6>
                            </div>
                        </div>
                    </div>

                    <div class="px-2 simplebar-scrollable-y" style="max-height: 300px;" data-simplebar="init"><div class="simplebar-wrapper" style="margin: 0px -12px;">
                            <div class="simplebar-height-auto-observer-wrapper">
                                <div class="simplebar-height-auto-observer"></div>
                            </div>
                            <div class="simplebar-mask">
                                <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
                                    <div class="simplebar-content-wrapper" tabindex="0" role="region" aria-label="scrollable content" style="height: auto; overflow: hidden scroll;">
                                        <div class="simplebar-content" style="padding: 0px 12px;">


                                            <twig:Turbo:Frame
                                                id="notifications"
                                                src="{{ path('app_notification_stream') }}"
                                            >
                                                <div class="dropdown-item p-0 notify-item card unread-noti shadow-none mb-1">
                                                    <div class="card-body">
                                                        <span class="float-end noti-close-btn text-muted"><i class="mdi mdi-close"></i></span>
                                                        <div class="d-flex align-items-center">
                                                            <div class="flex-shrink-0">
                                                                <div class="notify-icon bg-primary">
                                                                    <i class="ri-chat-quote-line font-18"></i>
                                                                </div>
                                                            </div>
                                                            <div class="flex-grow-1 text-truncate ms-2">
                                                                <h5 class="noti-item-title fw-semibold font-14"><span class="placeholder col-5"> <small class="fw-normal text-muted ms-1"><span class="placeholder col-3"></small></h5>
                                                                <small class="noti-item-subtitle text-muted"><span class="placeholder col-12"></small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="text-center">
                                                    <i class="mdi mdi-dots-circle mdi-spin text-muted h3 mt-0"></i>
                                                </div>
                                            </twig:Turbo:Frame>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="simplebar-placeholder" style="width: 319px; height: 508px;"></div>
                        </div>
                        <div class="simplebar-track simplebar-horizontal" style="visibility: hidden;">
                            <div class="simplebar-scrollbar" style="width: 0px; display: none;"></div>
                        </div>
                        <div class="simplebar-track simplebar-vertical" style="visibility: visible;">
                            <div class="simplebar-scrollbar" style="height: 177px; display: block; transform: translate3d(0px, 0px, 0px);"></div>
                        </div>
                    </div>

{#                    <a href="javascript:void(0);" class="dropdown-item text-center text-primary notify-item border-top py-2">#}
{#                        View All#}
{#                    </a>#}

                </div>
            </li>

            <li class="d-sm-inline-block">
                <a href="{% if app.session.get('_theme') == 'dark' %}{{ path('app_theme_light') }}{% else %}{{ path('app_theme_dark') }}{% endif %}">
                    <div class="nav-link" id="light-dark-mode" data-bs-toggle="tooltip" data-bs-placement="left" aria-label="{{ 'header.themeMode'|trans }}" data-bs-original-title="{{ 'header.themeMode'|trans }}">
                        <i class="ri-moon-line font-22"></i>
                    </div>
                </a>
            </li>

            <li class="dropdown">
                <a class="nav-link dropdown-toggle arrow-none nav-user px-2" data-bs-toggle="dropdown" href="#"
                   role="button" aria-haspopup="false" aria-expanded="false">
                  <span class="account-user-avatar">
                      <p class="rounded-circle">{{ app.user.initials }}</p>
                    </span>
                    <span class="d-lg-flex flex-column gap-1 d-none">
                      <h5 class="my-0">{{ app.user.fullName }}</h5>
						{% if app.user.company is not null %}
							<h6 class="my-0 fw-normal">{{ app.user.company }}</h6>
						{% endif %}
                    </span>
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated profile-dropdown">
                    <div class=" dropdown-header noti-title">
                        <h6 class="text-overflow m-0">{{ 'header.dropdown.welcome'|trans }}</h6>
                    </div>

                    <a href="{{ path('app_profil') }}" class="dropdown-item">
                        <i class="mdi mdi-account-circle"></i>
                        <span>{{ 'profile.label'|trans }}</span>
                    </a>

                    {% if is_granted('IS_IMPERSONATOR') %}
                        <a href="{{ impersonation_exit_path(path('admin_dashboard') ) }}" class="dropdown-item bg-danger text-white">
                            <i class="mdi mdi-lock-alert"></i>
                            <span>{{ 'action.exitImpersonation'|trans }}</span>
                        </a>
                    {% endif %}

                    <a href="{{ path('security_logout') }}" class="dropdown-item">
                        <i class="mdi mdi-logout"></i>
                        <span>{{ 'action.logout'|trans }}</span>
                    </a>

                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin_dashboard') }}" class="dropdown-item bg-warning text-white">
                            <i class="uil-briefcase"></i>
                            <span>{{ 'dashboard.admin'|trans }}</span>
                        </a>
                    {% endif %}
                </div>
            </li>
        </ul>
    </div>
</div>


<div id="issueCreateSelectProject" class="modal fade"  role="dialog" aria-labelledby="issueCreateSelectProjectLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="standard-modalLabel">{{ 'select_project.title'|trans }}</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
            </div>
            <div class="modal-body">

                {% for project in app.user.projects %}
                    <a class="card bg-secondary-subtle d-flex flex-row justify-content-between align-items-center px-2 py-1 my-0" href="{{ path('app_project_issue_create', {key: project.jiraKey}) }}">
                        <h5>{{ project.name }}</h5>

                        <i class="mdi mdi-arrow-right"></i>
                    </a>
                {% endfor %}

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">{{ 'action.close'|trans }}</button>
            </div>
        </div>
    </div>
</div>
