{% trans_default_domain 'app' %}
{% props reporter = null, reporterName = null, hasImage = true %}

{% if reporterName is not null %}
    <span class="align-middle">
        {{ reporterName }}
    </span>
{% elseif reporter is not null %}
    <span class="align-middle">
        {% if reporter.accountId == jira_account_id %}
            {{ app.user.fullName }} (Support)
        {% else %}
            {% if hasImage %}
                <img src="{{ reporter.avatarUrls|first }}" alt="user-img" class="avatar-xs rounded-circle me-1">
            {% endif %}
            {{ reporter.displayName }}
        {% endif %}
    </span>
{% else %}
    <span class="fst-italic">{{ 'issue.assignee.not_assignee'|trans }}</span>
{% endif %}
