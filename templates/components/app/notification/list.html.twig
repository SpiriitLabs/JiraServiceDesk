<twig:Turbo:Stream:Replace
    target="#notifications"
>
    {% trans_default_domain 'app' %}

    <div id="notifications" class="simplebar-content notifications-list" data-turbo="true">

        {% if notifications|length == 0 %}
            <h5 class="text-muted font-12 text-uppercase mt-2">{{ 'list.pagination.empty'|trans }}</h5>
        {% endif %}

        <div id="notifications-list">
            {% for notification in notifications %}
                <div {{ stimulus_controller('notification', {id: notification.id, link: notification.link}) }} {{ stimulus_target('notification', 'notification')}} aria-label="{{ notification.body }}" class="dropdown-item p-0 notify-item card unread-noti shadow-none mb-1">
                    <div class="card-body">
                        <span role="button" tabindex="0" class="float-end noti-close-btn text-muted" {{ stimulus_action('notification', 'close', 'click') }}><i class="mdi mdi-close"></i></span>
                        <div role="button" tabindex="0" class="d-flex align-items-center" {{ stimulus_action('notification', 'open', 'click')}}>
                            <div class="flex-shrink-0" >
                                <div class="notify-icon bg-primary">
                                    <i class="ri-chat-quote-line font-18"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-2 w-100" style="min-width:0; white-space:normal; overflow:visible;" >
                                <h5 class="noti-item-title fw-semibold font-14" style="white-space:normal; overflow:visible; word-break:break-word;">{{ notification.subject }} <small class="fw-normal text-muted ms-1">{{ notification.sendAt|date('d/m/Y') }}</small></h5>
                                <small class="noti-item-subtitle text-muted" style="white-space:normal; overflow:visible; word-break:break-word;">{{ notification.body }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

</twig:Turbo:Stream:Replace>
