{% extends 'admin/log_entry/base.html.twig' %}

{% trans_default_domain 'app' %}

{% block pageTitle 'logs.title.view'|trans({'%id%': entity.id}) %}
{% set breadcrumb = [
    {
        label: 'action.list',
    },
    {
        label: 'action.view',
    }
] %}

{% block content %}
    <div class="row justify-content-between">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <ul>
                        <li>{{ 'logs.type.label'|trans }} : {{ entity.type.label|trans }}</li>
                        <li>{{ 'logs.level.label'|trans }} : {{ entity.type.label|trans }}</li>
                        <li>{{ 'logs.subject.label'|trans }} : {{ entity.subject }}</li>
                        <li>{{ 'logs.logAt.label'|trans }} : {{ entity.logAt|date('d/m/Y H:i:s') }}</li>
                        <li>{{ 'logs.datas.label'|trans }} : {% for key,value in entity.datas %}<span>{{ key }} : {{ value }}</span><br>{% endfor %}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
