{% extends 'admin/email_log/base.html.twig' %}

{% trans_default_domain 'app' %}

{% block pageTitle 'emaillog.label'|trans %}
{% set breadcrumb = [
    {
        label: 'action.list',
    }
] %}

{% block content %}
    <twig:list:list
        :filterFormResetPath="path('admin_email_log_list')"
        :filterForm="filterForm"
    >
        {% trans_default_domain 'app' %}

        {% block tableTh %}
            {% trans_default_domain 'app' %}
            <th class="d-none d-md-table-cell">{{ 'emaillog.recipient.label'|trans }}</th>
            <th class="d-none d-md-table-cell">{{ 'emaillog.subject.label'|trans }}</th>
            <th class="d-none d-md-table-cell">{{ 'emaillog.sentAt.label'|trans }}</th>
        {% endblock %}

        {% block tableTd %}
            <td>{{ object.recipient }}</td>
            <td>{{ object.subject }}</td>
            <td>{{ object.sendAt|date('d/m/Y H:i') }}</td>
        {% endblock %}
    </twig:list:list>
{% endblock %}
