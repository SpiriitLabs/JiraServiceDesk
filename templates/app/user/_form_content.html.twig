{% trans_default_domain 'app' %}

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.firstName) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.lastName) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.email) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.plainPassword, {
            row_attr: {
                class: 'mb-0'
            }
        }) }}
        <p class="fst-italic text-muted">{{ 'user.password.notice'|trans }}</p>
    </div>
</div>

<hr>

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.preferedLocale) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.preferedTheme) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.defaultProject) }}
    </div>
</div>

<div {{ stimulus_controller('notification_profil') }}>
    <div class="row">
        <div class="col-md-2">
            {{ form_row(form.preferenceNotification) }}
            <small class="text-muted">{{ 'user.preferenceNotification.notice'|trans }}</small>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            {{ form_row(form.preferenceNotificationIssueCreated) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.preferenceNotificationIssueUpdated) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.preferenceNotificationCommentCreated) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.preferenceNotificationCommentUpdated) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.preferenceNotificationCommentOnlyOnTag) }}
        </div>
    </div>
</div>
