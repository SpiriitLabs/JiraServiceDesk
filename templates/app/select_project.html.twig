{% extends 'app/layout.html.twig' %}
{% trans_default_domain 'app' %}

{% block title 'select_project.title'|trans %}

{% block wrapper %}
    <div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-4 col-lg-5">
                    <div class="card">

                        <div class="card-header pt-2 pb-2 text-center bg-primary">
                            <span><img src="{{ asset(logo_light_path, 'app') }}" alt="Logo {{ 'title.short'|trans }}" height="74"></span>
                        </div>

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <h4 class="text-dark-50 text-center pb-0 fw-bold">{{ 'select_project.title'|trans }}</h4>
                            </div>

                            <div class="d-flex flex-column m-auto gap-2 mt-4 mb-5">

                                {% for userProject in app.user.projects %}
                                    <a class="card bg-secondary-subtle d-flex flex-row justify-content-between align-items-center px-2 py-1 my-0" href="{{ path('app_project_view', {'key': userProject.jiraKey}) }}">
                                        <h5>{{ userProject.name }}</h5>

                                        <i class="mdi mdi-arrow-right"></i>
                                    </a>
                                {% endfor %}

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer footer-alt">
        2025{% if 'now' | date('Y') != 2025 %}-{{ 'now' | date('Y') }}{% endif%} Â© {{ project_name }}
    </footer>
{% endblock %}
